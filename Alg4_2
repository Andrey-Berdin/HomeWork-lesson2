public class Alg4_2 {
    public static void main(String[] args) {
        /*
            Дан массив целых чисел.
            Найти среднее арифметическое всех элементов.
         */
        int [] array = {12,10,40,21,34,28,67,59}; // Версия с заданным массивом целых чисел.
        int sum = 0;
        for ( int num : array) {
            // суммирование каждого элемента массива
            sum = sum + num;
        }
        System.out.println("Среднее арифметическое массива равно: " + sum / 8);
    }
}
